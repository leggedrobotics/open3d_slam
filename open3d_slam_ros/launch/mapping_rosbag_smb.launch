<?xml version="1.0" encoding="UTF-8"?>

<launch>

	<arg name="launch_rviz" default="true" />
	<arg name="cloud_topic" default="/rslidar_points" doc="/rslidar_points or /velodyne_points" />
	<arg name="play_delay" default="0.4" />
	<arg name="play_rate" default="0.5" />
	<arg name="use_sim_time" default="true" />
	<arg name="is_read_from_rosbag" default="false" />

	<arg name="parameter_file_path"
		default="$(find open3d_slam_ros)/param/params_velodyne_puck16.yaml" />
	<arg name="bag_filename" default="rosbags/anymal_hph_hoengg.bag" />
	<arg name="bag_filepath"
		default="$(find open3d_slam_ros)/data/$(arg bag_filename)" />

	<include
		file="$(find open3d_slam_ros)/launch/mapping.launch">
		<arg name="cloud_topic" value="$(arg cloud_topic)" />
		<arg name="launch_rviz" value="$(arg launch_rviz)" />
		<arg name="parameter_file_path" value="$(arg parameter_file_path)" />
		<arg name="is_read_from_rosbag" value="$(arg is_read_from_rosbag)" />
		<arg name="rosbag_filepath" value="$(arg bag_filepath)" />
		<arg name="use_sim_time" value="$(arg use_sim_time)"/>
	</include>

	<node pkg="rosbag" type="play" name="rosbag"
		args="'$(arg bag_filepath)' --delay '$(arg play_delay)' --rate '$(arg play_rate)' --clock -s 0"
		unless="$(arg is_read_from_rosbag)" />

	<!-- append - -loop for looping -->


</launch>